<!-- Views/Shared/_Layout.cshtml -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ABC Retailers</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-store"></i> ABC Retailers
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Customer" asp-action="Index">
                                <i class="fas fa-users"></i> Customers
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Product" asp-action="Index">
                                <i class="fas fa-box"></i> Products
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Order" asp-action="Index">
                                <i class="fas fa-shopping-cart"></i> Orders
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Upload" asp-action="Index">
                                <i class="fas fa-upload"></i> Upload Files
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-shield-alt"></i> Privacy
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">
                                <i class="fas fa-envelope"></i> Contact
                            </a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            <!-- Alert Messages -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                    <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-light mt-auto">
        <div class="container py-3">
            <div class="row g-4">
                <!-- Brand Info -->
                <div class="col-md-4">
                    <h5 class="fw-bold mb-3">
                        <i class="fas fa-store text-primary"></i> ABC Retailers
                    </h5>
                    <p class="small text-muted">
                        Your one-stop shop for the best deals and latest products.
                        We pride ourselves on fast service, secure payments, and top-quality customer care.
                    </p>
                </div>

                <!-- Quick Links -->
                <div class="col-md-4">
                    <h6 class="fw-bold mb-3 text-uppercase">Quick Links</h6>
                    <ul class="list-unstyled small">
                        <li><a asp-controller="Home" asp-action="Index" class="text-light text-decoration-none">Home</a></li>
                        <li><a asp-controller="Product" asp-action="Index" class="text-light text-decoration-none">Products</a></li>
                        <li><a asp-controller="Order" asp-action="Index" class="text-light text-decoration-none">Orders</a></li>
                        <li><a asp-controller="Upload" asp-action="Index" class="text-light text-decoration-none">Upload Documents</a></li>
                        <li><a asp-controller="Home" asp-action="Privacy" class="text-light text-decoration-none">Privacy Policy</a></li>
                        <li><a asp-controller="Home" asp-action="Contact" class="text-light text-decoration-none">Contact Us</a></li>
                    </ul>
                </div>

                <!-- Contact & Social -->
                <div class="col-md-4">
                    <h6 class="fw-bold mb-3 text-uppercase">Get in Touch</h6>
                    <p class="small mb-1"><i class="fas fa-envelope text-warning me-2"></i> ST10453511@imconnect.edu.za</p>
                    <p class="small mb-1"><i class="fas fa-phone text-success me-2"></i> +27 81 060 3097</p>
                    <p class="small mb-3">
                        <i class="fas fa-map-marker-alt text-danger me-2"></i>
                        Physical Address: 144 Peter Rd, Ruimsig, Roodepoort, 1724
                    </p>

                    <div class="d-flex gap-3 mt-2">
                        <a href="#" class="text-light"><i class="fab fa-facebook fa-lg"></i></a>
                        <a href="#" class="text-light"><i class="fab fa-instagram fa-lg"></i></a>
                        <a href="#" class="text-light"><i class="fab fa-twitter fa-lg"></i></a>
                        <a href="#" class="text-light"><i class="fab fa-linkedin fa-lg"></i></a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bottom Bar -->
        <div class="text-center py-3 border-top border-secondary small">
            &copy; 2025 ABC Retailers | Built with <i class="fas fa-heart text-danger"></i> in South Africa
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>